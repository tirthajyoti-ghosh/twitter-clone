<div class="column is-half">
  <% if user_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is-64x64">
          <%= image_tag("https://source.unsplash.com/collection/1127173/800x800") %>
        </p>
      </figure>
      <div class="media-content">
        <%= render 'tweets/form' %>
      </div>
    </article>
  <% end %>

  <% @tweets.each do | tweet | %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <%= image_tag("https://source.unsplash.com/collection/1127173/800x800") %>
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong><%= tweet.user.name %></strong><br />
            <small>@<%= tweet.user.username %></small><br/>
            <p><%= tweet.tweet %></p>
          </div>
          <% if user_signed_in? && current_user == tweet.user %>
            <nav class="level">
              <div class="level-left is-mobile">
                <%= link_to tweet, class: "level-item" do %>
                  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to edit_tweet_path(tweet), class: "level-item" do %>
                  <span class="icon"><i class="fas fa-pen"></i></span>
                <% end %>
                <%= link_to tweet, method: :delete, data: { confirm: "Are you sure you want to delete this tweet?" } do %>
                    <span class="icon"><i class="fas fa-trash-alt"></i></span>
                <% end %>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  <% end %>
</div> 
